<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pixel Talk</title>
    <link rel="icon" href="/chat.png" type="image/png">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Welcome to PixelTalk</h1>

    <div class="input-group">
     <input type="text" id="message" placeholder="Enter Message:" />
     <button id="sendBtn">Send</button>
    </div>


    <!-- <div id="messages" style="border: 1px solid #ccc; padding: 10px; height: 300px; overflow-y: auto;"></div> -->
     <div id="messages"></div>



   <script src="/socket.io/socket.io.js"></script>

    <script>
       
        const socket = io();
        const sendBtn = document.getElementById("sendBtn");
        const messageInp = document.getElementById("message");
        const  allMessages = document.getElementById("messages");

        let isOwnMessage = false;// reset flag after message is displayed

        socket.on("message", (message)=>{
            const p = document.createElement('p');
            p.classList.add("message"); // 
            p.innerText = message;

            if (message.startsWith("❌")) {
                p.classList.add("system");
            } else if (message.startsWith("✅")) {
                p.classList.add("joined");
            }
                else {
            if (isOwnMessage) {
                p.classList.add("self");
            } else {
                p.classList.add("other");
            }
        }
            isOwnMessage = false; 
            allMessages.appendChild(p);
            allMessages.scrollTop = allMessages.scrollHeight;
        });  


        sendBtn.addEventListener("click", () => {
        const message = messageInp.value.trim();
        if (message) {
            isOwnMessage = true; // mark next received message as self
            socket.emit("user-message", message);
            messageInp.value = ""; // clear input after sending
        }
        });

        
    </script>
    
</body>
</html>
